g = str(input())
if  g == 'треугольник':
  a = float(input())
  b = float(input())
  c = float(input())
  p = ((1 / 2) * (a + b + c))
  Ssq = ((p * (p - a) * (p - b) * (p - c)) ** 0.5)
  print(Ssq)
elif g == 'круг':
  r = float(input())
  Pi = 3.14
  Sci = (Pi * r ** 2)
  print(Sci)
elif g == 'прямоугольник':
  a = float(input())
  b = float(input())
  Srec = (a * b)
  print(Srec)
